    "paths": {
        "/categories": {
            "post": {
                "tags": ["categories"],
                "sumary": "Cria uma Categoria",
                "description":"Cria uma nova cateogorias de carros",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "nome da nova categoria",
                                    "description": "descrição da categoria"
                                }
                            }
                        }
                    }
                }, 
                "responses": {
                    "200": {
                        "description": "Categoria criada com sucesso"
                    }, 
                    "500": {
                        "description": "Erro interno da applicação"
                    }
                    
                }
            
            },
            "get": {
                "tags": ["categories"],
                "sumary": "list todas as Categoria",
                "description":"Lista todas cas categorias, sejam elas importadas por cvs ou manual",
                "responses": {
                    "200": {
                        "description": "secesso na listagem",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties":{
                                            "name": {
                                                "type":"string"
                                            },
                                            "description": {
                                                "type": "string"
                                            }
                                        }

                                    }
                                }
                            }
                        }
                    }
                }
            }
    
        }

